# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4

# MongoDB Configuration (for persistent storage)
# If not set, application will fall back to JSON file storage
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=dungeonai_db
# Set to 'true' to require MongoDB connection (no JSON fallback). Defaults to 'true'.
MONGODB_REQUIRED=true

# Game Storage Configuration (JSON fallback)
GAME_SAVE_PATH=./saves
